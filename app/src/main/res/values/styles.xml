<resources>

    <!-- Base application theme. -->
    <style name="Light" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <item name="chrome_bg">@color/spritz_bg</item>
        <item name="settings_icon">@drawable/ic_settings_blk</item>
        <item name="love_icon">@drawable/ic_love_blk</item>
        <item name="theme_icon">@drawable/ic_theme_blk</item>
        <item name="speed_icon">@drawable/ic_gauge_blk</item>
        <item name="book_icon">@drawable/ic_book_blk</item>
        <item name="subdued_text">@color/subdued_text</item>
        <item name="ultra_subdued_text">@color/ultra_subdued_text</item>
        <item name="list_bg">@color/light_list_bg</item>
        <item name="spritz_history_curtain">@drawable/white_transparent_bg</item>
    </style>

    <style name="Dark" parent="@android:style/Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <item name="chrome_bg">@color/spritz_bg_dark</item>
        <item name="settings_icon">@drawable/ic_settings_white</item>
        <item name="love_icon">@drawable/ic_love_white</item>
        <item name="theme_icon">@drawable/ic_theme_white</item>
        <item name="speed_icon">@drawable/ic_gauge_white</item>
        <item name="book_icon">@drawable/ic_book_white</item>
        <item name="subdued_text">@color/subdued_text_dark</item>
        <item name="ultra_subdued_text">@color/ultra_subdued_text_dark</item>
        <item name="list_bg">@color/dark_list_bg</item>
        <item name="spritz_history_curtain">@drawable/black_transparent_bg</item>

    </style>

    <!-- ActionBar -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">?attr/chrome_bg</item>
    </style>

    <style name="PivotLetter">
        <item name="android:textColor">@color/pivot_text</item>
    </style>
<!--
    <style name="SpritzTextStyle">
        <item name="android:background">@color/spritz_bg</item>
        <item name="android:textColor">@color/spritz_text</item>
    </style>

    <style name="SpritzTextStyle.Dark">
        <item name="android:background">@color/spritz_bg_dark</item>
        <item name="android:textColor">@color/spritz_text_dark</item>
    </style>
-->
    <style name="SubduedTextStyle">
        <item name="android:textColor">?attr/subdued_text</item>
    </style>

    <style name="UltraSubduedTextStyle">
        <item name="android:textColor">?attr/ultra_subdued_text</item>
    </style>

    <style name="MinutesToGo">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/ultra_subdued_text</item>
    </style>

    <attr name="love_icon" format="reference" />
    <attr name="theme_icon" format="reference" />
    <attr name="speed_icon" format="reference" />
    <attr name="book_icon" format="reference" />
    <attr name="settings_icon" format="reference" />

    <attr name="subdued_text" format="reference" />
    <attr name="ultra_subdued_text" format="reference" />
    <attr name="list_bg" format="reference" />
    <attr name="chrome_bg" format="reference" />
    <attr name="spritz_history_curtain" format="reference" />

</resources>
